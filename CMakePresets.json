{
  "version": 2,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 15,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "Win-MSVC-2019",
      "hidden": true,
      "generator": "Visual Studio 16 2019",
      "architecture": "x64",
      "cacheVariables": {
        "EXP_3RD_ROOT": {
          "type": "STRING",
          "value": "$env{EXP_3RD_ROOT}"
        }
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "Debug",
      "configurationType": "Debug",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": {
          "type": "STRING",
          "value": "Debug"
        }
      }
    },
    {
      "name": "Release",
      "configurationType": "Release",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": {
          "type": "STRING",
          "value": "Release"
        }
      }
    },
    {
      "name": "Win-MSVC-2019-Debug",
      "displayName": "Win-MSVC-2019-Debug",
      "inherits": [
        "Win-MSVC-2019",
        "Debug"
      ],
      "binaryDir": "${sourceDir}/cmake-build-debug"
    },
    {
      "name": "Win-MSVC-2019-Release",
      "displayName": "Win-MSVC-2019-Release",
      "inherits": [
        "Win-MSVC-2019",
        "Release"
      ],
      "binaryDir": "${sourceDir}/cmake-build-release"
    }
  ],
  "buildPresets": [
    {
      "name": "Win-MSVC-2019-Debug",
      "configurePreset": "Win-MSVC-2019-Debug"
    },
    {
      "name": "Win-MSVC-2019-Release",
      "configurePreset": "Win-MSVC-2019-Release"
    }
  ],
  "testPresets": [
    {
      "name": "Win-MSVC-2019-Debug",
      "configurePreset": "Win-MSVC-2019-Debug"
    },
    {
      "name": "Win-MSVC-2019-Release",
      "configurePreset": "Win-MSVC-2019-Release"
    }
  ]
}
